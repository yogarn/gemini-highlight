{
  "manifest_version": 3,
  "name": "Gemini Highlight",
  "version": "1.0",
  "description": "Select text and get the correct answer from choices",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html"
  }
}
